<h3>Contact us</h3>
<% message_params = params.fetch(:message, {}).permit(:name, :email, :body) %>

<%= form_for [Message.new(message_params)], :html => {class: 'form-horizontal', role: 'form'}  do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :name, :placeholder => "Name", :class => 'form-control input-lg' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :email, :placeholder => "Email", :class => 'form-control input-lg' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Message', :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_area :body, :placeholder => "Message", :class => 'form-control input-lg', :html_options => {:rows => 3} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit "Contact us!", :class => 'btn btn-lead btn-lg' %>
    </div>
  </div>
<%- end %>
