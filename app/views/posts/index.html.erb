<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li class="active">Blog</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'pages/about_sidebar' %>
      </div>
      <div class="col-md-9">
        <h1>Welcome to <%= "#{@user.full_name}'s" %> Class</h1> 
        <%= image_tag @user.image_url(:square_sm) %>
      </div>
      <div class="col-md-9">
        <div class="content">
          <h1>Updates</h1>
          <% @posts.each do |post| %>

            <div class='post'>
              <h2><%= post.title %></h2>
              <p><%= post.author %></p>
              <p><%= post.created_at %></p>
              <p><%= post.body %></p>
              <% if post.image? %>
                <%= image_tag post.image_url(:square) %>
              <% else %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<section>
